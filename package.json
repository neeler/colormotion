{
	"name": "colormotion",
	"version": "0.0.0-semantically-released",
	"description": "Dynamic color wheel for LEDs",
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.js",
			"import": "./dist/index.mjs",
			"types": "./dist/index.d.ts"
		}
	},
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"prepublishOnly": "npm run build",
		"type-check": "npx tsc --noEmit",
		"test": "vitest",
		"coverage": "vitest run --coverage"
	},
	"keywords": [
		"color",
		"gradient",
		"motion",
		"animation",
		"LED",
		"color wheel"
	],
	"author": "neeler",
	"license": "(BSD-3-Clause AND Apache-2.0)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/neeler/colormotion.git"
	},
	"bugs": {
		"url": "https://github.com/neeler/colormotion/issues"
	},
	"homepage": "https://neeler.github.io/colormotion",
	"devDependencies": {
		"@trivago/prettier-plugin-sort-imports": "^6.0.2",
		"@types/chroma-js": "^3.1.2",
		"@vitest/coverage-v8": "^3.2.4",
		"conventional-changelog-conventionalcommits": "^9.1.0",
		"prettier": "^3.8.1",
		"semantic-release": "^25.0.2",
		"tsup": "^8.5.1",
		"type-fest": "^4.41.0",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"volta": {
		"node": "24.13.0",
		"npm": "11.6.2"
	},
	"dependencies": {
		"chroma-js": "^3.2.0",
		"scrips": "^1.1.4"
	}
}
